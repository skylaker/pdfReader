<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ml_tablet_hsv_all">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="5dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_singlepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:src="@drawable/ml_iv_singlepage_pad_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rv_page_present_single"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_conpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:src="@drawable/ml_iv_conpage_pad_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rv_page_present_continuous"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:id="@+id/ml_tablet_ll_thumbs">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_thumbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:src="@drawable/ml_iv_thumbnail_pad_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rv_page_present_thumbnail"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:id="@+id/ml_tablet_ll_reflow">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_reflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_reflow_selector"/>

                    <TextView
                        android:id="@+id/ml_tablet_tv_reflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rd_reflow_topbar_title"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:id="@+id/ml_tablet_ll_lockscreen">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_crop_selector"/>

                    <TextView
                        android:id="@+id/ml_tablet_tv_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rd_crop_topbar_title"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ml_tablet_iv_lockscreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_lockscreen_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rv_screen_rotation_pad"
                        android:textSize="@dimen/ux_text_height_body2"
                        android:textColor="@color/ux_color_dark"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:id="@+id/ml_tablet_ll_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ux_text_height_body2"
                    android:textColor="@color/ux_color_dark"
                    android:text="@string/ml_system_light" />

                <ImageView
                    android:id="@+id/ml_tablet_iv_syslight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/setting_off"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@color/ux_color_seperator_gray"/>

                <ImageView
                    android:id="@+id/ml_tablet_iv_light_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ml_light_small"/>

                <SeekBar
                    android:id="@+id/ml_tablet_sb_light"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:maxHeight="1.5dp"
                    android:minHeight="1.5dp"
                    android:max="255"
                    android:thumb="@drawable/ml_seekbar_thumb_bt_selector"
                    android:progressDrawable="@drawable/ml_seekbar_bg"/>

                <ImageView
                    android:id="@+id/ml_tablet_iv_light_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ml_light_big"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@color/ux_color_seperator_gray"/>

                <ImageView
                    android:id="@+id/ml_tablet_iv_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ml_daynight_day_selector"/>

            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
