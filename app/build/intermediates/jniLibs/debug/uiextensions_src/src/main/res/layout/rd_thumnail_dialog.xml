<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ux_bg_color_docviewer"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/thumbnailist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/ux_toolbar_height_phone"
        android:background="@color/ux_bg_color_docviewer"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/thumbnail_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rd_viewmode_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:id="@+id/thumbnail_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ux_bg_color_toolbar_light"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/thumbnail_bottom_toolbar_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_thumnail_toolbar_rotate_disable"
            android:gravity="center"
            android:padding="6dp"
            android:text="Rotate"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thumbnail_bottom_toolbar_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_thumnail_toolbar_extract_disable"
            android:gravity="center"
            android:padding="6dp"
            android:text="Extract"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thumbnail_bottom_toolbar_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_thumnail_toolbar_copy_disable"
            android:gravity="center"
            android:padding="6dp"
            android:text="Copy"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thumbnail_bottom_toolbar_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_thumnail_toolbar_delete_disable"
            android:gravity="center"
            android:padding="6dp"
            android:text="Delete"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>